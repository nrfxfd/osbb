<%= form_with model: appartment do |form| %>
  <div>
    <%= form.label :appartm %><br>
    <%= form.text_field(:appartm,{:class => 'form-control'}) %>
    <% appartment.errors.full_messages_for(:appartm).each do |message| %>
      <div class="alert alert-danger"><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :area_apprtmnt %><br>
    <%= form.text_area(:area_apprtmnt,{:class => 'form-control'})%><br>
    <% appartment.errors.full_messages_for(:area_apprtmnt).each do |message| %>
      <div class="alert alert-danger"><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit ({:class => 'btn btn-success'})%>
  </div>

<% end %>