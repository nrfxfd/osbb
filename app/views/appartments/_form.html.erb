<%= form_with model: appartment do |form| %>

  <div>
    <%= form.label :'№ квартири'%><br>
    <%= form.number_field :appartm, in: 1..77%>
  </div>

  <div>
    <%= form.label :'Площа квартири' %><br>
    <%= form.number_field :area_apprtmnt, in:25.0..150.0%><br>
  </div>

  <div>
    <%= form.label :'Показник лічильніка води' %><br>
    <%= form.number_field :previus_water, in: 1.0..99999.0%><br>
  </div>

  <div>
    <%= form.label :'Показник лічильніка електроенергії' %><br>
    <%= form.number_field :previus_electricity, in: 1.0..99999.0%><br>
  </div>

  <div>
    <%= form.label :'Заборгованість' %><br>
    <%= form.number_field :arears, in: 1.0..9999.0%><br>
  </div>


  <div>
    <%= form.submit ({:class => 'btn btn-success'})%>
  </div>

<% end %>


