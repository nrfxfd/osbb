<%= form_with model: resident do |form| %>
  <div>
    <%= form.label :resident%><br>
    <%= form.text_field(:resident,{:class => 'form-control'}) %>
    <% resident.errors.full_messages_for(:appartm).each do |message| %>
      <div class="alert alert-danger"><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :name %><br>
    <%= form.text_area(:name,{:class => 'form-control'})%><br>
    <% resident.errors.full_messages_for(:name).each do |message| %>
      <div class="alert alert-danger"><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit ({:class => 'btn btn-success'})%>
  </div>

<% end %>