<%= form_with model: [@apartment, @resident] do |form| %>


  <div>
    <%= form.label :'Прізвище' %><br>
    <%= form.text_field(:lastname,{:class => 'form-control',readonly:  !current_apartment.admin?})%><br>
  </div>

  <div>
    <%= form.label :"Ім'я" %><br>
    <%= form.text_field(:name,{:class => 'form-control',readonly:  !current_apartment.admin?})%><br>
  </div>

  <div>
    <%= form.label :'По батькові' %><br>
    <%= form.text_field(:surname,{:class => 'form-control',readonly:  !current_apartment.admin?})%><br>
  </div>

  <div>
    <%= form.label :'Телефон' %><br>
    <%= form.telephone_field(:phone,{:class => 'form-control'})%><br>
  </div>

  <div>
    <%= form.label :'День народження' %><br>
    <%= form.date_field(:birthday,{:class => 'form-control',readonly:  !current_apartment.admin?})%><br>
  </div>

  <div>
    <%= form.label :'Чи є власником квартири?' %><br>
    <%= form.check_box( :owner,disabled: !current_apartment.admin? ) %><br>
  </div>

  <div>
    <%= form.label :'Чи є орендарем квартири?' %><br>
    <%= form.check_box(:tenant,disabled:  !current_apartment.admin?)%><br>
  </div>

  <div>
    <%= form.submit ({:class => 'btn btn-success'})%>
  </div>

<% end %>
